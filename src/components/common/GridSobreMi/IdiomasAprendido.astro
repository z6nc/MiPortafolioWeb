---
import { ListaIdiomas } from "../../../data/idiomas";
---

<div class="row-span-2 col-span-2 border-1 border-gray-600 bg-fondoOscuro p-5 rounded-lg">
    <h3 class="text-white font-black uppercase text-sm">Idiomas</h3>
    <ul class="flex flex-wrap gap-2 pt-3">
        {ListaIdiomas.map((idioma) => (
          <li class="inline-flex  space-x-2 items-center text-[11px]   px-3   py-2 rounded-lg  border-1 border-gray-700 text-gray-300 font-bold">
              <img class="size-5" src={idioma.PaisImg} alt={`Bandera de ${idioma.nombre}`} loading="lazy" />
            <p>{idioma.nombre}</p> 
            <span>{idioma.nivel}</span>
          </li>
        ))
        }
       </ul>
</div>