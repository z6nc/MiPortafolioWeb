---
import { ListaTecnologia } from "../../../data/tecnologias"
const filterListaTecnologias = ListaTecnologia.filter((tecnologia) => tecnologia.ConocimientoTecnologia === "intermedio" )
---
<div class="row-span-3 col-span-2  border-1 border-gray-500 bg-fondoOscuro p-5 rounded-lg">
  <h3 class="text-white font-black uppercase ">Tecnologias que manejo</h3>
   <ul class="flex flex-wrap gap-2 pt-3">
    {filterListaTecnologias.map((tech) => (
      <li class="inline-flex  space-x-2 items-center text-[11px]   px-3   py-2 rounded-lg  border-1 border-gray-700 text-gray-300">
        <p>{tech.NombreTecnoliga}</p>
       <img src={tech.LogoTecnologia} class="size-5" alt={`Logo de ${tech.NombreTecnoliga}`} />
      </li>
    ))}
   </ul>
</div>