---
import ItemCertificacion from "../../../common/Certificacion/ItemCertificacion.astro";
import { ListaCertifaciones } from "../../../../data/certificaciones";
const { EmpresaCertificado } = Astro.props;

const FiltroCertificados = ListaCertifaciones.filter(
  (certificado) => certificado.company === EmpresaCertificado
);
---

<div class="flex items-center justify-center mb-4 py-9">
  <span class="flex-grow border-t-1 border-white/25"></span>
  <h2 class="text-xl uppercase text-white font-bold mx-7">
    {EmpresaCertificado}
  </h2>
  <span class="flex-grow border-t-1 border-white/25"></span>
</div>
<article
  class="flex flex-wrap gap-3 items-center justify-center text-white max-w-6xl mx-auto animate-bounce-fade-in"
>
  {
    FiltroCertificados.map((certificado) => (
      <ItemCertificacion certificado={certificado} />
    ))
  }
</article>
