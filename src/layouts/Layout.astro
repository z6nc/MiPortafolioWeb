---
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";
import Navbar from "../components/layout/Navbar/Navbar.astro";
import Footer from "../components/layout/Footer/Footer.astro";

const tituloWeb = Astro.props.tituloWeb;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portafolio web de Andrés Velasquez, estudiante de Ingeniería de Sistemas enfocado en desarrollo web, diseño UI y experiencias digitales." />
    <meta name="author" content="Andres Daniel Velasquez" />
    <meta name="robots" content="index, follow" />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://portafolio-web-fawn.vercel.app/">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Portafolio de Andrés Velásquez | Desarrollador Web" />
<meta property="og:description" content="Explora los proyectos, habilidades y experiencia de Andrés Velásquez, desarrollador web peruano con enfoque en frontend y experiencia de usuario." />

    <meta property="og:image" content="https://res.cloudinary.com/dleem7osr/image/upload/v1743361655/PortadaPortafolio_xhpxj2.webp">
    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content="portafolio-web-fawn.vercel.app">
    <meta property="twitter:url" content="https://portafolio-web-fawn.vercel.app/">
    <meta name="twitter:title" content="Portafolio de Andres Velasquez | Desarrollador Web" />
    <meta name="twitter:description" content="Explora los proyectos, habilidades y experiencia de Andrés Velásquez, desarrollador web peruano con enfoque en frontend y experiencia de usuario." />
    <meta name="twitter:image" content="https://res.cloudinary.com/dleem7osr/image/upload/v1743361655/PortadaPortafolio_xhpxj2.webp">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Andres Velasquez",
        "url": "https://portafolio-web-fawn.vercel.app/",
        "image": "https://res.cloudinary.com/dleem7osr/image/upload/v1743361655/PortadaPortafolio_xhpxj2.webp",
        "jobTitle": "Desarrollador Web",
        "description": "Estudiante de Ingeniería de Sistemas y desarrollador web especializado en frontend, UI/UX y creación de interfaces atractivas.",
        "sameAs": [
          "https://github.com/z6nc",
          "https://www.linkedin.com/in/andresvelasquezdev"
        ]
      }
        </script>


    <title>{tituloWeb}</title>
    <ViewTransitions />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html,
  body {
    background: linear-gradient(60deg, #181832, #080852);
    color: #fff;
    font-family: "Montserrat", sans-serif;
  }
</style>
